{
    "name": "Java Node Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21",
            "jdkDistro": "openjdk"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "20"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.vscode-node-pack",
                "vscjava.vscode-java-pack",
                "redhat.java"
            ]
        }
    },
    "postCreateCommand": "apt-get update && apt-get install -y nano vim unzip zip tar gzip bzip2 htop tree net-tools iputils-ping dnsutils && java -version && node --version && npm --version"
}